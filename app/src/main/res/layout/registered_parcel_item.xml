<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardMaxElevation="8dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/parcelContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="חבילה"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/parcelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="קטנה"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:text="סוג החבילה: "
                android:textSize="20dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" גרם"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/parcelWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:text="משקל:          "
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/parcelStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="במחסן"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:text="סטטוס:         "
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/noDeliversMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="  אין כרגע הצעות למשלוח"
                android:visibility="gone"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/delivers_spinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textDirection="firstStrongRtl"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/delivers_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:text="שליחים:       "
                android:textSize="20dp"/>


        </LinearLayout>


        <Button
            android:id="@+id/chooseDeliver_Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_primary"
            android:text="בחר שליח"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/confirmParcelArrived_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_primary"
            android:text="אשר הגעה"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:visibility="gone"
            />



    </LinearLayout>
</androidx.cardview.widget.CardView>